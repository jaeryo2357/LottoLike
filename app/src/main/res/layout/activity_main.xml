<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent"
    tools:context="com.example.jaery.rotto.MainActivity"
    android:orientation="vertical">



       <View
           android:layout_width="0dp"
           android:layout_height="0dp"
           android:id="@+id/center"
           android:layout_centerHorizontal="true">

       </View>


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/recently_Lotto_info_layout"
        android:background="@color/colorPrimary"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lottoResult_day"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:layout_marginTop="10dp"
            android:text="2019년 9월 17일"/>
       <TextView
           android:layout_width="wrap_content"
           android:textSize="21sp"
           android:text="875회"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="15dp"
           android:id="@+id/lottoResult_title"
           android:layout_below="@id/lottoResult_day"
           android:textColor="#ffffff"
           android:textStyle="bold"
           android:layout_height="wrap_content" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:id="@+id/main_result_layout"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/lottoResult_title">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="14dp"
        android:id="@+id/lottoResult_layout"
        android:gravity="center">

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/yellow_circle"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="5"
            android:textStyle="bold"
            android:id="@+id/L1"
            />
        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/blue_circle"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="5"
            android:textStyle="bold"
            android:id="@+id/L2"
            />
        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/blue_circle"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="5"
            android:textStyle="bold"
            android:id="@+id/L3"
            />/>

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/red_circle"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_marginLeft="6dp"
            android:text="5"
            android:textStyle="bold"
            android:id="@+id/L4"
            />
        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/shadow_circle"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="5"
            android:textStyle="bold"
            android:id="@+id/L5"
            />/>
        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/green_circle"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="5"
            android:textStyle="bold"
            android:id="@+id/L6"
            />/>

    </LinearLayout>




    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@null"
        android:src="@drawable/add_image"
        android:gravity="center"
        android:layout_alignBottom="@id/lottoResult_layout"
        android:layout_toRightOf="@id/lottoResult_layout"
        android:id="@+id/loading_add_image"
        />/>

    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/blue_circle"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/loading_add_image"
        android:layout_alignBottom="@id/lottoResult_layout"
        android:text="5"
        android:textStyle="bold"
        android:id="@+id/bonus"
        />/>
    </RelativeLayout>

    </RelativeLayout>




    <RelativeLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/recently_Lotto_info_layout"
        android:id="@+id/recently_Lotto_money_layout"
        android:layout_width="match_parent"
        android:background="@drawable/corner_square_white"

        android:translationZ="3dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textColor="#000000"
            android:id="@+id/recently_Lotto_money_title"
            android:text="1등 당첨 금액">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:id="@+id/recently_Lotto_money"
            android:text="1,903,214,584원"
            android:layout_below="@id/recently_Lotto_money_title"
            >

        </TextView>

    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_below="@id/recently_Lotto_money_layout"
        android:layout_marginTop="15dp"
        android:id="@+id/main_qr"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:background="@drawable/corner_square"
        android:text="QR 코드">
    </Button>


    <RelativeLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/main_qr"
        android:id="@+id/recently_Lotto_recommend_layout"
        android:layout_width="match_parent"
        android:background="@drawable/corner_square_white"
        android:translationZ="3dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            android:id="@+id/recently_Lotto_recommend_title"
            android:text="이번 주 추천 번호">
        </TextView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/recently_Lotto_recommend_title"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:gravity="center">

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/yellow_circle"
                android:textColor="#ffffff"
                android:gravity="center"
                android:text="5"
                android:textStyle="bold"
                android:id="@+id/recommend_L1"
                />
            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="6dp"
                android:background="@drawable/blue_circle"
                android:textColor="#ffffff"
                android:gravity="center"
                android:text="5"
                android:textStyle="bold"
                android:id="@+id/recommend_L2"
                />
            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="6dp"
                android:background="@drawable/blue_circle"
                android:textColor="#ffffff"
                android:gravity="center"
                android:text="5"
                android:textStyle="bold"
                android:id="@+id/recommend_L3"
                />/>

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/red_circle"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_marginLeft="6dp"
                android:text="5"
                android:textStyle="bold"
                android:id="@+id/recommend_L4"
                />
            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="6dp"
                android:background="@drawable/shadow_circle"
                android:textColor="#ffffff"
                android:gravity="center"
                android:text="5"
                android:textStyle="bold"
                android:id="@+id/recommend_L5"
                />/>
            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="6dp"
                android:background="@drawable/green_circle"
                android:textColor="#ffffff"
                android:gravity="center"
                android:text="5"
                android:textStyle="bold"
                android:id="@+id/recommend_L6"
                />/>

        </LinearLayout>
    </RelativeLayout>





    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_below="@id/recently_Lotto_recommend_layout"
        android:layout_marginTop="15dp"
        android:id="@+id/main_get_random_number"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:background="@drawable/corner_square"
        android:text="다른 번호 추첨">
    </Button>




</RelativeLayout>
