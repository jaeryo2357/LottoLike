<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jaery.rotto.MainActivity"
    android:orientation="vertical">



       <View
           android:layout_width="0dp"
           android:layout_height="0dp"
           android:id="@+id/center"
           android:layout_centerHorizontal="true"></View>

       <TextView
           android:layout_width="wrap_content"
           android:textSize="21sp"
           android:text="875회 당첨결과"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="15dp"
           android:id="@+id/lottoResult_title"
           android:textColor="@color/colorPrimaryDark"
           android:textStyle="bold"
           android:layout_height="wrap_content" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lottoResult_day"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/lottoResult_title"
        android:layout_marginTop="10dp"
        android:text="2019년 9월 17일"/>



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/lottoResult_day">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="14dp"
        android:id="@+id/lottoResult_layout"
        android:gravity="center">

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/yellow_circle"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="5"
            android:textStyle="bold"
            android:id="@+id/L1"
            />
        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/blue_circle"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="5"
            android:textStyle="bold"
            android:id="@+id/L2"
            />
        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/blue_circle"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="5"
            android:textStyle="bold"
            android:id="@+id/L3"
            />/>

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/red_circle"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_marginLeft="6dp"
            android:text="5"
            android:textStyle="bold"
            android:id="@+id/L4"
            />
        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/shadow_circle"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="5"
            android:textStyle="bold"
            android:id="@+id/L5"
            />/>
        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/green_circle"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="5"
            android:textStyle="bold"
            android:id="@+id/L6"
            />/>

    </LinearLayout>



    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@null"
        android:src="@drawable/add_image"
        android:gravity="center"
        android:layout_alignBottom="@id/lottoResult_layout"
        android:layout_toRightOf="@id/lottoResult_layout"
        android:id="@+id/loading_add_image"
        />/>

    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/blue_circle"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/loading_add_image"
        android:layout_alignBottom="@id/lottoResult_layout"
        android:text="5"
        android:textStyle="bold"
        android:id="@+id/bonus"
        />/>
    </RelativeLayout>
</RelativeLayout>
