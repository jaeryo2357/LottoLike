<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/corner_square_not_important"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/number_list_level"
        android:textColor="@color/colorPrimaryDark"
        android:text="1등">
    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/lottoResult_layout"
        android:gravity="center">

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/yellow_circle"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="5"
            android:textStyle="bold"
            android:id="@+id/L1"
            />
        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/blue_circle"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="5"
            android:textStyle="bold"
            android:id="@+id/L2"
            />
        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/blue_circle"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="5"
            android:textStyle="bold"
            android:id="@+id/L3"
            />/>

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/red_circle"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_marginLeft="6dp"
            android:text="5"
            android:textStyle="bold"
            android:id="@+id/L4"
            />
        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/shadow_circle"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="5"
            android:textStyle="bold"
            android:id="@+id/L5"
            />/>
        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/green_circle"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="45"
            android:textStyle="bold"
            android:id="@+id/L6"
            />/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/number_list_money_tv"
        android:text="당첨금 :"
        android:layout_below="@id/lottoResult_layout"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:textColor="#000000">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="17sp"
        android:textStyle="bold"
        android:id="@+id/number_list_money"
        android:layout_alignTop="@id/number_list_money_tv"
        android:layout_alignRight="@id/lottoResult_layout"
        android:text="1,123,131,131원">

    </TextView>
</RelativeLayout>