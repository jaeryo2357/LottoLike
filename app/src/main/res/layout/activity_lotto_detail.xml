<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="com.lottolike.jaery.lotto.view.detail.DetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.lottolike.jaery.lotto.view.detail.LottoDetailActivity">


        <RelativeLayout
            android:id="@+id/recently_Lotto_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/lotto_detail_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:background="@null"
                android:src="@drawable/back"></ImageButton>


            <TextView
                android:id="@+id/lottoResult_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text='@{@string/lotto_title(vm.lottoNum)}'
                android:textColor="#ffffff"
                android:textSize="21sp"
                android:transitionName="lottoTitle"
                android:textStyle="bold" />


            <RelativeLayout
                android:id="@+id/main_result_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:transitionName="lottoNumber"
                android:layout_below="@id/lottoResult_title"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="13dp">

                <LinearLayout
                    android:id="@+id/lottoResult_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="14dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:lotto_background="@{vm.numberOne}"
                        android:gravity="center"
                        android:text="@{@string/lotto_num(vm.numberOne)}"
                        android:textColor="#ffffff"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/L2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="6dp"
                        app:lotto_background="@{vm.numberTwo}"
                        android:gravity="center"
                        android:text="@{@string/lotto_num(vm.numberTwo)}"
                        android:textColor="#ffffff"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/L3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="6dp"
                        app:lotto_background="@{vm.numberTrd}"
                        android:gravity="center"
                        android:text="@{@string/lotto_num(vm.numberTrd)}"
                        android:textColor="#ffffff"
                        android:textStyle="bold" />/>

                    <TextView
                        android:id="@+id/L4"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="6dp"
                        app:lotto_background="@{vm.numberFor}"
                        android:gravity="center"
                        android:text="@{@string/lotto_num(vm.numberFor)}"
                        android:textColor="#ffffff"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/L5"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="6dp"
                        app:lotto_background="@{vm.numberFiv}"
                        android:gravity="center"
                        android:text="@{@string/lotto_num(vm.numberFiv)}"
                        android:textColor="#ffffff"
                        android:textStyle="bold" />/>

                    <TextView
                        android:id="@+id/L6"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="6dp"
                        app:lotto_background="@{vm.numberSix}"
                        android:gravity="center"
                        android:text="@{@string/lotto_num(vm.numberSix)}"
                        android:textColor="#ffffff"
                        android:textStyle="bold" />/>

                </LinearLayout>


                <ImageView
                    android:id="@+id/loading_add_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignBottom="@id/lottoResult_layout"
                    android:layout_toRightOf="@id/lottoResult_layout"
                    android:background="@null"
                    android:gravity="center"
                    android:src="@drawable/add_image" />/>

                <TextView
                    android:id="@+id/bonus"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignBottom="@id/lottoResult_layout"
                    android:layout_marginRight="20dp"
                    android:layout_toRightOf="@id/loading_add_image"
                    app:lotto_background="@{vm.numberBus}"
                    android:gravity="center"
                    android:text="@{@string/lotto_num(vm.numberBus)}"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />/>
            </RelativeLayout>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/recently_Lotto_money_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_square_white"
            android:translationZ="3dp"
            app:layout_constraintTop_toBottomOf="@+id/recently_Lotto_info_layout">

            <TextView
                android:id="@+id/recently_Lotto_money_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="1등 당첨 금액"
                android:textColor="#000000"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/recently_Lotto_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/recently_Lotto_money_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="1,903,214,584원"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="17sp"
                android:textStyle="bold">
            </TextView>

        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
